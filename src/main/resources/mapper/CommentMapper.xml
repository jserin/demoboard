<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="demo.demoBoard.domain.comment.mapper.CommentMapper">
    <!-- comment 테이블 전체 컬럼 -->
    <sql id="commentColumns">
        cmtId
        , cmtCnt
        , cmtWriter
        , cmtPwd
        , groupId
        , boardId
        , createDate
        , modifyDate
        , cmtDel
    </sql>

    <!-- 댓글 저장 -->
    <insert id="save" parameterType="demo.demoBoard.domain.comment.model.CommentRequest">
        <selectKey keyProperty="cmtId" order="BEFORE" resultType="int">
            SELECT cmt_seq.nextval FROM dual
        </selectKey>
        INSERT INTO cmtTbl (
        <include refid="commentColumns" />
        ) VALUES (
        #{cmtId}
        , #{cmtCnt}
        , #{cmtWriter}
        , #{cmtPwd}
        , 0
        , #{boardId}
        , SYSDATE
        , null
        , 0
        )
    </insert>

    <!-- 대댓글 저장 -->
    <insert id="saveReCmt" parameterType="demo.demoBoard.domain.comment.model.CommentRequest">
        <selectKey keyProperty="cmtId" order="BEFORE" resultType="int">
            SELECT cmt_seq.nextval FROM dual
        </selectKey>
        INSERT INTO cmtTbl (
        <include refid="commentColumns" />
        ) VALUES (
        #{cmtId}
        , #{cmtCnt}
        , #{cmtWriter}
        , #{cmtPwd}
        , #{groupId}
        , #{boardId}
        , SYSDATE
        , null
        , 0
        )
    </insert>

    <!-- 댓글 상세정보 조회 -->
    <select id="findById" parameterType="int" resultType="demo.demoBoard.domain.comment.model.CommentResponse">
        SELECT
        <include refid="commentColumns" />
        FROM
        cmtTbl
        WHERE
        cmtId = #{cmtId}
    </select>

    <!-- 댓글 수정 -->
    <update id="update" parameterType="demo.demoBoard.domain.comment.model.CommentRequest">
        UPDATE cmtTbl
        SET
            modifyDate = SYSDATE
          , cmtCnt = #{cmtCnt}
          , cmtWriter = #{cmtWriter}
          , cmtPwd = #{cmtPwd}
        WHERE
            cmtId = #{cmtId}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="deleteById" parameterType="int">
        UPDATE cmtTbl
        SET
            cmtDel = 1
        WHERE
            cmtId = #{cmtId}
    </delete>

    <!-- 댓글 리스트 조회 -->
    <select id="findAll" parameterType="int" resultType="demo.demoBoard.domain.comment.model.CommentResponse">
        SELECT
            <include refid="commentColumns" />
        FROM
            cmtTbl
        WHERE
            cmtDel = 0
            AND boardId = #{boardId}
        ORDER BY
            cmtId DESC
    </select>

    <!-- 대댓글 리스트 조회 -->
    <select id="findAllByGroupId" parameterType="int" resultType="demo.demoBoard.domain.comment.model.CommentResponse">
        SELECT
        <include refid="commentColumns" />
        FROM
        cmtTbl
        WHERE
        cmtDel = 0
        AND groupId = #{groupId}
        ORDER BY
        cmtId
    </select>
</mapper>